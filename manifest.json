{
  "manifest_version": 3,
  "name": "AI Review Responder",
  "version": "1.0",
  "description": "Generate AI responses for Expedia and Booking reviews.",
  "permissions": [
    "storage",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
